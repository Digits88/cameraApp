<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/drawer_layout_calculator_activity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#052150"
            android:id="@+id/top_menu">
            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="start"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/menu_settings"
                android:scaleType="fitCenter"

                android:padding="10dp"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/sniezka_logo"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"


                />
        </RelativeLayout>


    <LinearLayout
        android:id="@+id/lay_1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/top_menu" >

        <TextView
            style="@style/TextCalculatorLabel"
            android:text="Exterior or Interior" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.54" />
    </LinearLayout>

    <View
        android:id="@+id/div_1"
        style="@style/Divider"
        android:background="#8b8989"
        android:layout_below="@+id/lay_1"/>

    <LinearLayout
        android:id="@+id/lay_2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/div_1">

        <TextView
            style="@style/TextCalculatorLabel"
            android:text="Type of Surface" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.54" />
    </LinearLayout>

    <View
        android:layout_below="@+id/lay_2"
        android:id="@+id/div_2"
        style="@style/Divider"
        android:background="#8b8989" />

    <LinearLayout
        android:id="@+id/lay_3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/div_2">

        <TextView
            style="@style/TextCalculatorLabel"
            android:text="Paint Typet" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.54" />
    </LinearLayout>

    <View
        android:id="@+id/div_3"
        style="@style/Divider"
        android:background="#8b8989"
        android:layout_below="@+id/lay_3"/>

    <LinearLayout
        android:id="@+id/lay_4"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/div_3">

        <TextView
            style="@style/TextCalculatorLabel"
            android:text="Width(m)" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <View
        android:id="@+id/div_4"

        style="@style/Divider"
        android:background="#8b8989"
        android:layout_below="@+id/lay_4"/>

    <LinearLayout
        android:id="@+id/lay_5"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/div_4">

        <TextView
            style="@style/TextCalculatorLabel"
            android:text="Height(m)" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <View
        android:id="@+id/div_5"
        style="@style/Divider"
        android:background="#8b8989"
        android:layout_below="@+id/lay_5"/>

    <LinearLayout
        android:id="@+id/lay_6"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/div_5">

        <TextView
            style="@style/TextCalculatorLabel"
            android:text="No. of Surfaces" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <View
        android:id="@+id/div_6"
        style="@style/Divider"
        android:background="#8b8989"
        android:layout_below="@+id/lay_6"/>

    <LinearLayout
        android:id="@+id/lay_bottom_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_6">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="You will need 0 Litres"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#808080" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_bottom_1">


        <TextView
            android:paddingTop="10dp"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/calculator_description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#C0C0C0" />
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
        <!--android:id="@+id/fragment_place"-->

    <include layout="@layout/left_menu"/>

</android.support.v4.widget.DrawerLayout>